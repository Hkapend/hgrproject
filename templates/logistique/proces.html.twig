{% extends 'base.html.twig' %}

{% block title %} {{ page_name }}! ✅ {% endblock %}

{% block body %}
    {% include 'extension/sidebar.html.twig' %}
    <div class="main-footer">
        <div class="container-fluid">
            <div class="card-body">
                <h4 class="heading-small text-lg-center mb-4">
                    <i class="fa fa-briefcase-medicale text-muted">
                        {% if editPv %}
                            Modifier PV
                        {% else %}
                            Enregistrement
                        {% endif %}
                    </i>
                </h4>
                <div class="pl-lg-4">
                    {{ form_start (form_pv) }}
                    <div class="row">
                        <div class="col-lg">
                            <div class="form-group">
                                {{ form_row(form_pv.description, { attr : { 'placeholder':'ex:Table' ,  'class':'form-control' }} )}}
                            </div>
                        </div>
                        <div class="col-lg">
                            <div class="form-group">
                                {{ form_row(form_pv.qteDemande, {'attr':{ 'placeholder':'ex: KAJAKA' ,  'class':'form-control', 'label':'Quantité demandée'}}) }}
                            </div>
                        </div>
                        <div class="col-lg">
                            <div class="form-group">
                                {{ form_row(form_pv.qteRecu, {'attr':{ 'placeholder':'ex:idNat548',  'class':'form-control', 'label':'Quantité récu' }} )}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg">
                            <div class="form-group">
                                {{ form_row(form_pv.marque, {'attr':{ 'placeholder':'ex:Bureau',  'class':'form-control' }} )}}
                            </div>
                        </div>
                        <div class="col-lg">
                            <div class="form-group">
                                {{ form_row(form_pv.observation, {'attr':{ 'placeholder':'ex:Bonne Réception',  'class':'form-control' }} )}}
                            </div>
                        </div>
                        <div class="col-lg">
                            <div class="form-group">
                                {{ form_row(form_pv.createdAt, {'attr':{ 'class':'form-control' }} )}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-2"></div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                {% if editPv %}
                                    <button type="submit" class="btn btn-warning mb-xl-7">
                                        <i class="fa fa-edit text-white"></i>  Modifier
                                    </button>
                                {% else %}
                                    <button type="submit" class="btn btn-outline-primary mb-xl-7">
                                        <i class="fa fa-save text-white"></i>  Enregistrer
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {{ form_end(form_pv) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}