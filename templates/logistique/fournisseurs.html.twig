{% extends 'base.html.twig' %}

{% block title %} {{ page_name }}! ✅ {% endblock %}

{% block body %}
    {% include 'extension/sidebar.html.twig' %}
    <div class="main-footer">
        <div class="container-fluid">
            <div class="card-body">
                <h4 class="heading-small text-lg-center mb-4"><i class="fas fa-briefcase-medicale text-muted">Gestion des Fonisseurs de l'Hopital</i></h4>
                <div class="pl-lg-4">
                    <h5 class="heading-small text-lg-left mb-4">
                        {% if editfour %}
                            Modifier fournisseur
                        {% else %}
                            Enregistrement
                        {% endif %}
                    </h5>
                </div>
                <div class="pl-lg-4">
                    {{ form_start (fournisseur) }}
                    <div class="row">
                        <div class="col-lg-2"></div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    {{ form_row(fournisseur.description, { attr : { 'placeholder':'ex:UAC' ,  'class':'form-control' }} )}}
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    {{ form_row(fournisseur.adresse, {'attr':{ 'placeholder':'ex: KAJAKA' ,  'class':'form-control'}}) }}
                                </div>
                            </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                {{ form_row(fournisseur.denomination, {'attr':{ 'placeholder':'ex:idNat548',  'class':'form-control' }} )}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-2"></div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                    {% if editfour %}
                                        <button type="submit" class="btn btn-warning mb-xl-7">
                                                <i class="fa fa-edit text-white"></i>  Modifier
                                        </button>
                                    {% else %}
                                        <button type="button" class="btn btn-outline-primary mb-xl-7" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">
                                            <i class="fa fa-save text-white"></i>  Enregistrer
                                        </button>
                                    {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-sm modal-dialog-centered">
                            <div class="modal-content bg-gradient-white">
                                <div class="modal-header">
                                </div>
                                <div class="modal-body">
                                    <div class="pl-lg-4">
                                        <p class="text-dark text-center">
                                            Etes-vous sûr de vouloir enregistrer ?
                                        </p>
                                    </div>
                                    <div class="pl-lg-4 text-center">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                            Non
                                        </button> <tr/><tr/><tr/>
                                        <button type="submit" class="btn btn-outline-primary mb-xl-7">
                                            Oui
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end (fournisseur) }}
                </div>
                <div class="col-auto">
                    <div class="shadow">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="text-dark mb-0">Liste des Fournisseurs</h3>
                        </div>
                        <div class="table-responsive text-center">
                            <table class="table align-items-center table-white table-flush">
                                <thead class="thead-dark">
                                <tr>
                                    <th scope="col" class="sort" data-sort="">Description</th>
                                    <th scope="col" class="sort" data-sort="">Adresse</th>
                                    <th scope="col" class="sort" data-sort="">Dénomination</th>
                                    <th scope="col" class="sort" data-sort="">Action</th>
                                </tr>
                                </thead>
                                <tbody class="list">
                                {% for affiche in afficher %}
                                    <tr>
                                        <th scope="row">
                                            {{ affiche.description }}
                                        </th>
                                        <th class="budget">
                                            {{ affiche.adresse }}
                                        </th>
                                        <th class="budget">
                                            {{ affiche.denomination }}
                                        </th>
                                        <th class="bg-default shadow">
                                            <a href="{{ path('fournisseurs_edit',{'id':affiche.id}) }}" class="btn btn-warning"><i class="fa fa-edit text-white"></i></a>
                                            <a href="{{ path('fournisseurs_delete',{'id':affiche.id}) }}" class="btn btn-danger"><i class="fa fa-trash text-white"></i></a>
                                        </th>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer py-4 card bg-default shadow">
                            <nav aria-label="...">
                                <ul class="pagination justify-content-end mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">
                                            <i class="fas fa-angle-left"></i>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">
                                            <i class="fas fa-angle-right"></i>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'extension/footer.html.twig' %}
{% endblock %}
