{% include 'extension/sidebar.html.twig' %}
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="tab-content" id="custom-content-below-tabContent">
                <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel">
                    <h4 class="heading-small text-lg-center mb-4"><i class="fas fa-briefcase-medicale text-muted">Affectation des Materiels de l'Hopital</i></h4>
                    <div class="shadow">
                        <section class="content-header">
                            <div class="container-fluid">
                                <div class="text-center">
                                    <h1> AFFECTATION DES MATERIELS N° {{ affiche_num }}</h1>
                                </div>
                            </div><!-- /.container-fluid -->
                        </section>

                        <section class="content">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        <!-- Main content -->
                                        <div class="invoice p-3 mb-3">
                                            <div class="row">
                                                <div class="col-4 text-center">
                                                    DIVISION PROVINCIALE DE LA SANTE <br> HOPITAL GENERAL DE REFERENCE MWANGEJI
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-1"></div>
                                                <div class="col-3">
                                                    <div class="p-3 mb-3">
                                                        <h1><i class="fas fa-hospital"></i></h1>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-xl-center">
                                                <p><strong><br><br>AFFECTATION DES MATERIELS</strong> </p>
                                            </div>
                                            <div class="row invoice-info">
                                                <div class="col-sm-6 invoice-col">
                                                    N° Affectation : {{ affiche_num }} <br>
                                                    Au Service : {{ description }}
                                                </div>
                                                <!-- /.col -->
                                            </div>
                                            <!-- info row -->
                                            <!-- /.row -->

                                            <!-- Table row -->
                                            <div class="row">
                                                <div class="col-12 table-responsive text-center">
                                                    <table class="table table-striped table-bordered">
                                                        <thead>
                                                        <tr>
                                                            <th>N°</th>
                                                            <th>Designation</th>
                                                            <th>Quantité</th>
                                                            <th>Observation</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for affichemoi in affichePV %}
                                                            <tr>
                                                                <td>{{ 1 }}</td>
                                                                <td>{{ affichemoi.descript }}</td>
                                                                <td>{{ affichemoi.qte }}</td>
                                                                <td>{{ affichemoi.observation }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <!-- /.col -->
                                            </div>
                                            <!-- /.row -->
                                            <div class="row">
                                                <div class="col-12">
                                                    <p class="text-muted well well-sm shadow-none float-right">
                                                        Fait à Kolwezi, le {{ affiche_date | date ('d/m/Y') }} à {{ affiche_date | date ('H:i') }}
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <!-- accepted payments column -->
                                                <div class="col-4">
                                                    <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                                                        Chef de département de {{ description }}
                                                    </p>
                                                </div>
                                                <!-- /.col -->
                                                <div class="col-4 text-center">
                                                    <p class="lead"><strong>AG chargé des Patrimoine</strong></p>
                                                </div>
                                                <div class="col-4 text-right">
                                                    <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">Intendance</p>
                                                </div>
                                                <!-- /.col -->
                                            </div>
                                            <br><br><br>
                                            <div class="row">
                                                <div class="col-12 text-center">
                                                    <p class="lead"><strong>VISA DU MEDECIN DIRECTEUR</strong></p>
                                                </div>
                                            </div>
                                            <!-- /.row -->

                                            <!-- this row will not appear when printing -->
                                            <div class="row no-print">
                                                <div class="col-12">
                                                    <form action="" method="post" name="add_name" id="add_name">
                                                        <button type="button" id="print" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Print</button>
                                                        <button type="button" class="btn btn-success float-right"><i class="fas fa-send-o"></i> Approuver </button>
                                                        <button type="submit" name="pdf" class="btn btn-primary float-right" style="margin-right: 5px;">
                                                            <i class="fas fa-file-pdf"></i> Generer un PDF
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.invoice -->
                                    </div><!-- /.col -->
                                </div><!-- /.row -->
                            </div><!-- /.container-fluid -->
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

