{% include 'extension/sidebar.html.twig' %}
<div class="content-wrapper">
    <section class="content">
            <div class="container-fluid">
                <div class="tab-content" id="custom-content-below-tabContent">
                    <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel">
                        <h4 class="heading-small text-lg-center mb-4"><i class="fas fa-briefcase-medicale text-muted">Gestion des Materiels de l'Hopital</i></h4>
                        <div class="shadow">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="card-header bg-transparent border-0">
                                        <h3 class="text-dark mb-0">Liste des Materiels</h3>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group text-lg-right">
                                        <button type="button" class="btn btn-primary mb-xl-7" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">
                                            <i class="fa fa-tools text-white"></i>  Ajouter un materiel
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <!-- debut du modal-->
                            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-xl modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="heading-small text-lg-center">Enregistrement</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="pl-lg-4">
                                                {{ form_start (form) }}
                                                <div class="row">
                                                    <div class="col-lg">
                                                        <div class="form-group">
                                                            {{ form_row(form.description, { attr : { 'placeholder':'ex:Chaise',  'class':'form-control' }} )}}
                                                        </div>
                                                    </div>
                                                    <div class="col-lg">
                                                        <div class="form-group">
                                                            {{ form_row(form.type, {'attr':{ 'class':'form-control' }}) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg">
                                                        <div class="form-group">
                                                            {{ form_row(form.observation, {'attr':{ 'placeholder':'ex: en bon etat', 'class':'form-control' }} )}}
                                                        </div>
                                                    </div>
                                                    <div class="col-lg">
                                                        <div class="form-group">
                                                            {{ form_row(form.activated,{'attr':{ 'class':'form-control' }} )}}
                                                        </div>
                                                    </div>
                                                    <div class="col-lg">
                                                        <div class="form-group">
                                                            {{ form_row(form.fournisseur,{'attr':{ 'class':'form-control' }} )}}
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-3"></div><div class="col-lg-3"></div>
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-outline-primary mb-xl-7" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">
                                                        <i class="fa fa-save text-white"></i>  Enregistrer
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        {{ form_end (form) }}
                                    </div>
                                </div>
                            </div>
                            <!-- fin du modal-->

                            <div class="table-responsive">
                                <table class="table align-items-center table-white table-flush text-center">
                                    <thead class="thead-dark">
                                    <tr>
                                        <th scope="col" class="sort" data-sort="">Description</th>
                                        <th scope="col" class="sort" data-sort="">Type de Materriel</th>
                                        <th scope="col" class="sort" data-sort="">Observation</th>
                                        <th scope="col" class="sort" data-sort="">Fournisseur</th>
                                        <th scope="col" class="sort" data-sort="">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody class="list">
                                    {% for affiche in Affiche %}
                                        <tr>
                                            <th scope="row">
                                                {{ affiche.description }}
                                            </th>
                                            <th class="budget">
                                                {{ affiche.type }}
                                            </th>
                                            <th class="budget">
                                                {{ affiche.observation }}
                                            </th>
                                            <th class="budget">
                                                {{ affiche.fournisseur.description }}
                                            </th>
                                            <th class="bg-default shadow">
                                                <a href="{{ path('materiels_edit',{'id':affiche.id}) }}" class="btn btn-warning"><i class="fa fa-edit text-white"></i></a>
                                                <a href="{{ path('materiels_delete',{'id':affiche.id}) }}" class="btn btn-danger"><i class="fa fa-trash text-white"></i></a>
                                            </th>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <div class="card-footer py-4 card bg-default shadow">
                                <nav aria-label="...">
                                    <ul class="pagination justify-content-end mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1">
                                                <i class="fas fa-angle-left"></i>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                        </li>
                                        <li class="page-item active">
                                            <a class="page-link" href="#">1</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">
                                                <i class="fas fa-angle-right"></i>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</div>
