{% extends 'base.html.twig' %}

{% block title %} {{ page_name }}! ✅ {% endblock %}
{% block body %}
    {% include 'extension/sidebar.html.twig' %}

    <div class="main-footer">
        <div class="container-fluid">
            <div class="card-body">
                <h4 class="heading-small text-lg-center mb-4"><i class="fa fa-briefcase-medicale text-muted">LISTE DES PROCES VERBEAUX DE RECEPTION</i></h4>
                <div class="pl-lg-4"><div class="table-responsive text-center">
                        <table class="table align-items-center table-white table-flush">
                            <thead class="thead-dark">
                            <tr>
                                <th scope="col" class="sort" data-sort="">Numéro du PV</th>
                                <th scope="col" class="sort" data-sort="">Date de Création</th>
                                <th scope="col" class="sort" data-sort="">Heure de Création</th>
                                <th scope="col" class="sort" data-sort="">Action</th>
                            </tr>
                            </thead>
                            <tbody class="list">
                            {% for affiche in affichePV %}
                                <tr>
                                    <th scope="row">
                                        {{ affiche.numpv }}
                                    </th>
                                    <th scope="row">
                                        {{ affiche.created_at | date ('d/m/Y') }}
                                    </th>
                                    <th scope="row">
                                        {{ affiche.created_at | date ('H:i') }}
                                    </th>
                                    <th class="bg-default shadow">
                                        <a href="{{ path('detail_pv',{'valeur':affiche.valeur}) }}" name="{{ affiche.valeur }}" class="btn btn-block">Détail</a>
                                    </th>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer py-4 card bg-default shadow">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
                                        <i class="fas fa-angle-left"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="fas fa-angle-right"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}